<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Networks"
        android:id="@+id/button_show_networks"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="showNetworks" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a network below : "
        android:id="@+id/textView_choose_network"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_show_networks"
        android:layout_toEndOf="@+id/button_show_networks"
        android:paddingLeft="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_networks"
        android:layout_toRightOf="@+id/button_show_networks"
        android:layout_toEndOf="@+id/button_show_networks"
        android:layout_below="@+id/textView_choose_network"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:fadeScrollbars="false" />

</RelativeLayout>
